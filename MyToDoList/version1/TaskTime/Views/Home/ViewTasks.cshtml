                <br /><br />
            }
        }

    </div>
    <div class="col-5 center">
        <h4 class="quadrant">Quadrant 4</h4>
        <br />

        @foreach (var x in Model)
        {
            if (@x.Quadrant == "Quadrant IV" && @x.Completed == false)
