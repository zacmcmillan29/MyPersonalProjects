                <br /><br />
            }
        }

    </div>
</div>


<h1>This is just for us to visualize the data for now</h1>
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Task</td>
            <td>Due Date</td>
            <td>Time Estimate</td>
            <td>Time Spent</td>
            <td>Last Updated</td>
            <td>Quadrant</td>
            <td>Category</td>
            <td>Completed</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Task</td>
            <td>@x.DueDate</td>
            <td>@x.EstimateTime</td>
            <td>@x.TimeSpent</td>
            <td>@x.LastUpdated</td>
            <td>@x.Quadrant</td>
            <td>@x.Category</td>
            <td>@x.Completed</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.AppResponseId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.AppResponseId">Delete</a></td>
        </tr>
        }
    </tbody>
</table>